<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.week2thursdayhw.MainActivity">


    <Button
        android:id="@+id/btnFileHW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File HW"
        android:onClick="HomeworkType"/>

    <Button
        android:id="@+id/btnDatabaseHW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database HW"
        android:onClick="HomeworkType"/>
    <Button
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Async Task Parallel"
        android:onClick="HomeworkType"/>



</LinearLayout>
